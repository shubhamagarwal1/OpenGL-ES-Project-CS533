<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="shubhamagarwal1.com.opengl_retry">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/images"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CubeActivity"
            android:label="@string/title_activity_cube"
            android:theme="@style/AppTheme"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".TriangleActivity"
            android:label="@string/title_activity_triangle"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SquareActivity"
            android:label="@string/title_activity_square"
            android:theme="@style/AppTheme"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".TextCubeActivity"
            android:label="@string/title_activity_text_cube"
            android:theme="@style/AppTheme"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".PyramidActivity"
            android:label="@string/title_activity_pyramid"
            android:theme="@style/AppTheme"
            android:parentActivityName=".MainActivity"/>
    </application>

</manifest>
